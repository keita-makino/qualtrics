{
  "compilerOptions": {
    "target": "es2019",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "outDir": "dist",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["./src", "./tests"]
}
